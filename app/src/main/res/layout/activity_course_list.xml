<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        android:elevation="4dp">

        <!-- 標題文字 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="課表"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <!-- 主容器：橫向存放「時段列表 + 7天課表」 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 這裡若要顯示節次標示，可在這裡做 (可參考原程式) -->
        <!-- ... 省略, 請依需求客製化 ... -->

        <!-- 星期一 -->
        <GridLayout
            android:id="@+id/d1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFAFA"
            android:orientation="vertical"
            android:rowCount="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_rowWeight="0.25"
                android:gravity="center"
                android:text="周一"
                android:textSize="20sp" />
        </GridLayout>

        <!-- 星期二 -->
        <GridLayout
            android:id="@+id/d2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFAFA"
            android:orientation="vertical"
            android:rowCount="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_rowWeight="0.25"
                android:gravity="center"
                android:text="周二"
                android:textSize="20sp" />
        </GridLayout>

        <!-- 星期三 -->
        <GridLayout
            android:id="@+id/d3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFAFA"
            android:orientation="vertical"
            android:rowCount="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_rowWeight="0.25"
                android:gravity="center"
                android:text="周三"
                android:textSize="20sp" />
        </GridLayout>

        <!-- 星期四 -->
        <GridLayout
            android:id="@+id/d4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFAFA"
            android:orientation="vertical"
            android:rowCount="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_rowWeight="0.25"
                android:gravity="center"
                android:text="周四"
                android:textSize="20sp" />
        </GridLayout>

        <!-- 星期五 -->
        <GridLayout
            android:id="@+id/d5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFAFA"
            android:orientation="vertical"
            android:rowCount="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_rowWeight="0.25"
                android:gravity="center"
                android:text="周五"
                android:textSize="20sp" />
        </GridLayout>

        <!-- 星期六 -->
        <GridLayout
            android:id="@+id/d6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFAFA"
            android:orientation="vertical"
            android:rowCount="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_rowWeight="0.25"
                android:gravity="center"
                android:text="周六"
                android:textSize="20sp" />
        </GridLayout>

        <!-- 星期日 -->
        <GridLayout
            android:id="@+id/d7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFAFA"
            android:orientation="vertical"
            android:rowCount="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_rowWeight="0.25"
                android:gravity="center"
                android:text="周日"
                android:textSize="20sp" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>
